<%= link_to 'Home', "/" %>
<h1>All Shelters</h1>

<% @shelters.each do |shelter| %>
  <h2><%= link_to "#{shelter.name}", "shelters/#{shelter.id}" %></h2>
  <p><%= button_to "Edit Shelter", "/shelters/#{shelter.id}/edit" %></p>
  <p><%= button_to "Delete Shelter", "/shelters/#{shelter.id}", method: :delete %></p>
  <br>
<% end %>

<br><br>
<%= link_to "New Shelter", '/shelters/new' %>
