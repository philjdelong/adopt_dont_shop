<h1>All Pets</h1>
<br><br>
<% @pets.each do |pet| %>
  <img src=<%= pet.image %>>
  <h3>Name: <%= link_to "#{pet.name}", "/pets/#{pet.id}" %></h3>
  <p>Age: <%= pet.age %></p>
  <p>Sex: <%= pet.sex %></p>
  <p>Description: <%= pet.description %></p>
  <p>Adoption Status:
    <% if pet.status == true %>
      Adoptable
    <% else %>
      Adoption pending...
  <% end %></p>
  <%= button_to "Edit #{pet.name}", "/pets/#{pet.id}/edit" %>
  <%= button_to "Delete #{pet.name}", "/pets/#{pet.id}", method: :delete %></h3>
  <br><br>
<% end %>
