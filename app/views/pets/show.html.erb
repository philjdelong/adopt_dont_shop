<h1>This is <%= link_to "#{@pet.name}" %></h1>
   <img src= <%= @pet.image %>>

<h3>Description: </h3>
  <p><%= @pet.description %></p>

<h3>Approximate Age: </h3>
  <p><%= @pet.age %></p>

<h3>Sex: </h3>
  <p><%= @pet.sex %></p>

<h3>Adoption Status: </h3>
  <p><% if @pet.status == true %>
    Adoptable
    <% else %>
    Adoption pending...
    <% end %>
  </p>

<%= button_to "Edit Pet", "/pets/#{@pet.id}/edit" %>
<%= button_to "Delete Pet", "/pets/#{@pet.id}", method: :delete %>
